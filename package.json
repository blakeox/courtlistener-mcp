{
  "name": "courtlistener-mcp",
  "version": "0.1.0",
  "description": "Legal research MCP server providing comprehensive access to CourtListener legal database",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "legal-mcp": "dist/index.js",
    "legal-mcp-enterprise": "dist/enterprise-server.js"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:enterprise": "node dist/enterprise-server.js",
    "mcp": "node dist/index.js",
    "mcp:enterprise": "node dist/enterprise-server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:unit": "node test/runners/run-unit-tests.js",
    "test:integration": "node test/integration/test-api-integration.js",
    "test:performance": "node test/performance/test-performance.js",
    "test:enterprise:full": "echo 'Enterprise tests available in test/enterprise/'",
    "test:enterprise:comprehensive": "echo 'Enterprise tests available in test/enterprise/'",
    "test:enterprise:middleware": "npm run test:enterprise:auth && npm run test:enterprise:sanitization && npm run test:enterprise:rate-limiting && npm run test:enterprise:audit && npm run test:enterprise:circuit-breaker",
    "test:enterprise:auth": "node test/enterprise/middleware/test-authentication.js",
    "test:enterprise:auth:comprehensive": "node test/enterprise/middleware/test-auth-comprehensive.js",
    "test:enterprise:sanitization": "node test/enterprise/middleware/test-sanitization.js",
    "test:enterprise:rate-limiting": "node test/enterprise/middleware/test-rate-limiting.js",
    "test:enterprise:rate-limiting:comprehensive": "node test/enterprise/middleware/test-ratelimit-comprehensive.js",
    "test:enterprise:audit": "node test/enterprise/middleware/test-audit-logging.js",
    "test:enterprise:audit:comprehensive": "node test/enterprise/middleware/test-audit-comprehensive.js",
    "test:enterprise:compression": "node test/enterprise/middleware/test-compression.js",
    "test:enterprise:circuit-breaker": "node test/enterprise/middleware/test-circuit-breaker.js",
    "test:enterprise:circuit-breaker:comprehensive": "node test/enterprise/middleware/test-circuitbreaker-comprehensive.js",
    "test:enterprise:graceful-shutdown": "node test/enterprise/middleware/test-graceful-shutdown.js",
    "test:enterprise:integration": "node test/enterprise/integration/test-middleware-integration.js",
    "test:enterprise:end-to-end": "node test/enterprise/integration/test-end-to-end.js",
    "test:enterprise:performance": "node test/enterprise/performance/test-performance.js",
    "test:enterprise:performance:comprehensive": "node test/enterprise/performance/test-performance-comprehensive.js",
    "test:enterprise:security:comprehensive": "node test/enterprise/security/test-security-reliability.js",
    "test:enterprise:comprehensive:all": "node test/enterprise/run-comprehensive-tests.js",
    "test:enterprise:report": "node test/enterprise/final-test-status-report.js",
    "test:mcp": "node test/integration/test-mcp-protocol.js",
    "test:mcp:tool": "node test/integration/test-mcp-protocol.js test-tool",
    "inspect": "node scripts/dev/inspect.js",
    "inspect:local": "node scripts/dev/inspect.js local",
    "inspect:remote": "node scripts/dev/inspect.js remote",
    "dev": "tsc --watch --preserveWatchOutput",
    "lint": "tslint src/**/*.ts",
    "clean": "rm -rf dist",
    "health": "curl -f http://localhost:3001/health || exit 1",
    "enterprise:setup": "./scripts/build/setup-enterprise.sh",
    "enterprise:demo": "node enterprise-demo.js",
    "enterprise:benchmark": "node scripts/performance/benchmark-enterprise.js",
    "docker:enterprise": "docker build -f Dockerfile.enterprise -t legal-mcp:enterprise .",
    "ci:test-inspector": "node test/runners/ci-test-mcp-inspector.js",
    "ci:test-inspector:extended": "node test/runners/ci-test-mcp-inspector.js --extended",
    "ci:test-inspector:enhanced": "node test/runners/enhanced-ci-test-inspector.js",
    "ci:test-inspector:enhanced:extended": "node test/runners/enhanced-ci-test-inspector.js --extended",
    "ci:test-inspector:performance": "ENABLE_PERFORMANCE_TESTS=true node test/runners/enhanced-ci-test-inspector.js",
    "ci:version-check": "node scripts/build/version-check.js",
    "ci:analyze-performance": "node scripts/performance/analyze-performance.js",
    "ci:compare-performance": "node scripts/performance/compare-performance.js",
    "test:coverage": "node test/analysis/analyze-test-coverage.js",
    "test:analysis": "node test/analysis/analyze-untested-code.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "legal",
    "research",
    "courtlistener",
    "case-law",
    "legal-analysis"
  ],
  "author": "Legal MCP Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/blakeox/courtlistener-mcp.git"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.2",
    "@types/node": "^22.16.5",
    "typescript": "^5.8.3",
    "c8": "^8.0.1",
    "sinon": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}