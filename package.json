{
  "name": "courtlistener-mcp",
  "version": "0.1.0",
  "description": "Legal research MCP server providing comprehensive access to CourtListener legal database",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "configs",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "courtlistener-mcp": "dist/index.js"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsc && npm run generate:manifest",
    "generate:manifest": "npx tsx scripts/generate-manifest.ts",
    "deploy": "wrangler deploy",
    "start": "node dist/index.js",
    "doctor": "node dist/index.js --doctor",
    "setup": "node dist/index.js --setup",
    "mcp": "node dist/index.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:unit": "npx tsx test/runners/run-unit-tests.ts",
    "test:ts": "npx tsx test/unit/test-cache.ts",
    "test:integration": "npx tsx test/integration/test-api-integration.ts",
    "test:performance": "echo 'Performance tests available in test/performance/'",
    "test:enterprise:full": "echo 'Enterprise tests available in test/enterprise/'",
    "test:enterprise:comprehensive": "echo 'Enterprise tests available in test/enterprise/'",
    "test:enterprise:middleware": "npm run test:enterprise:auth && npm run test:enterprise:sanitization && npm run test:enterprise:rate-limiting && npm run test:enterprise:audit && npm run test:enterprise:circuit-breaker",
    "test:enterprise:auth": "npx tsx test/middleware/test-authentication.ts",
    "test:enterprise:auth:comprehensive": "npx tsx test/middleware/test-auth-comprehensive.ts",
    "test:enterprise:sanitization": "npx tsx test/middleware/test-sanitization.ts",
    "test:enterprise:rate-limiting": "npx tsx test/middleware/test-rate-limiting.ts",
    "test:enterprise:rate-limiting:comprehensive": "npx tsx test/middleware/test-ratelimit-comprehensive.ts",
    "test:enterprise:audit": "npx tsx test/middleware/test-audit-logging.ts",
    "test:enterprise:audit:comprehensive": "npx tsx test/middleware/test-audit-comprehensive.ts",
    "test:enterprise:compression": "npx tsx test/middleware/test-compression.ts",
    "test:enterprise:circuit-breaker": "npx tsx test/middleware/test-circuit-breaker.ts",
    "test:enterprise:circuit-breaker:comprehensive": "echo 'Circuit breaker comprehensive tests available'",
    "test:enterprise:graceful-shutdown": "npx tsx test/middleware/test-graceful-shutdown.ts",
    "test:enterprise:integration": "npx tsx test/enterprise/integration/test-middleware-integration.ts",
    "test:enterprise:end-to-end": "npx tsx test/enterprise/integration/test-end-to-end.ts",
    "test:enterprise:performance": "echo 'Enterprise performance tests available'",
    "test:enterprise:performance:comprehensive": "echo 'Enterprise performance comprehensive tests available'",
    "test:enterprise:security:comprehensive": "npx tsx test/enterprise/security/test-security-reliability.ts",
    "test:enterprise:comprehensive:all": "echo 'Enterprise comprehensive tests available in test/enterprise/'",
    "test:enterprise:report": "echo 'Enterprise test report available in test/enterprise/'",
    "test:mcp": "npx tsx test/integration/test-mcp-protocol.ts",
    "test:mcp:tool": "npx tsx test/integration/test-mcp-protocol.ts test-tool",
    "inspect": "node scripts/dev/inspect.js",
    "inspect:local": "node scripts/dev/inspect.js local",
    "inspect:remote": "node scripts/dev/inspect.js remote",
    "mcp:remote": "node scripts/dev/mcp-remote.js",
    "dev": "tsc --watch --preserveWatchOutput",
    "lint": "eslint . --ext .ts",
    "lint:src": "eslint src --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist",
    "health": "curl -f http://localhost:3001/health || exit 1",
    "enterprise:setup": "./scripts/build/setup-enterprise.sh",
    "enterprise:demo": "npx tsx enterprise-demo.ts",
    "enterprise:benchmark": "node scripts/performance/benchmark-enterprise.js",
    "demo:documentation": "npx tsx api-documentation-demo.ts",
    "docs:serve": "npx tsx api-documentation-demo.ts",
    "docker:enterprise": "docker build -f Dockerfile.enterprise -t legal-mcp:enterprise .",
    "ci:test-inspector": "npx tsx test/runners/ci-test-mcp-inspector.ts",
    "ci:test-inspector:extended": "npx tsx test/runners/ci-test-mcp-inspector.ts --extended",
    "ci:test-inspector:enhanced": "npx tsx test/runners/enhanced-ci-test-inspector.ts",
    "ci:test-inspector:enhanced:extended": "npx tsx test/runners/enhanced-ci-test-inspector.ts --extended",
    "ci:test-inspector:performance": "ENABLE_PERFORMANCE_TESTS=true npx tsx test/runners/enhanced-ci-test-inspector.ts",
    "ci:version-check": "node scripts/build/version-check.js",
    "ci:analyze-performance": "node scripts/performance/analyze-performance.js",
    "ci:compare-performance": "node scripts/performance/compare-performance.js",
    "test:coverage": "npx tsx test/analysis/analyze-test-coverage.ts",
    "coverage": "c8 --config .c8rc.json npm run test:unit",
    "coverage:unit": "c8 --config .c8rc.json npm run test:unit",
    "coverage:check": "c8 --config .c8rc.json --check-coverage --branches=50 --functions=50 --lines=50 --statements=50 npm run test:unit",
    "test:analysis": "npx tsx test/analysis/analyze-untested-code.ts",
    "prepublishOnly": "npm run build && npm run typecheck",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "legal",
    "research",
    "courtlistener",
    "case-law",
    "legal-analysis"
  ],
  "author": "Legal MCP Contributors",
  "license": "MIT",
  "homepage": "https://github.com/blakeox/courtlistener-mcp#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/blakeox/courtlistener-mcp.git"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.70.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.212.0",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@opentelemetry/sdk-trace-node": "^2.5.1",
    "agents": "^0.5.1",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "node-fetch": "^3.3.2",
    "zod": "^4.3.6",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260303.0",
    "@modelcontextprotocol/inspector": "^0.19.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "c8": "^10.1.3",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jose": "^6.1.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "sinon": "^21.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.63.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
