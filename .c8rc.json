{
  "include": ["dist/**/*.js"],
  "exclude": [
    "test/**",
    "scripts/**",
    "coverage/**",
    "node_modules/**",
    "*.config.js",
    "*.config.ts"
  ],
  "extension": [".ts", ".js"],
  "reporter": ["text", "html", "json-summary", "lcov"],
  "exclude-after-remap": false,
  "check-coverage": true,
  "lines": 50,
  "functions": 50,
  "branches": 40,
  "statements": 80,
  "per-file": false,
  "skip-full": false,
  "all": false,
  "cache": false,
  "clean": true,
  "temp-directory": "./coverage/.tmp",
  "reports-dir": "./coverage"
}
