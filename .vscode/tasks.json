    {
      "label": "ğŸ‘€ Watch TypeScript",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)[\\(:]+(\\d+)[,:](\\d+)(?:[,:](\\d+))?[\\):]?\\s+(error|warning|info)\\s+TS(\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "endColumn": 4,
          "severity": 5,
          "code": 6,
          "message": 7
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting compilation in watch mode...",
          "endsPattern": "Found \\d+ errors?\\. Watching for file changes\\."
        }
      }
    },
